apiVersion: v1
kind: ReplicationController
metadata:
  name: en-rss-release
  labels:
    name: en-rss-release
    version: v1
spec:
  replicas: 1
  selector:
    name: en-rss-release
    version: v1
  template:
    metadata:
      labels:
        name: en-rss-release
        version: v1
    spec:
      containers:
        - name: en-rss-release
          image: eu.gcr.io/eve-notifications/en-rss:$CIRCLE_SHA1
          volumeMounts:
            - name: en-rss-secrets
              mountPath: /media/secrets
          resources:
            limits:
              cpu: 50m
          env:
            - name: GCLOUD_DATASET_ID
              value: eve-notifications
            - name: GOOGLE_APPLICATION_CREDENTIALS
              value: /media/secrets/key.json
      volumes:
        - name: en-rss-secrets
          secret:
            secretName: en-rss-secrets
